{% extends "base.html.twig" %}

{% block body %}

	<main class="container container-home">

		<h1>Découvrez nos dernières recettes Cooking Chef !</h1>
		<p>
			Parcourez nos 284 recettes...
		</p>

		<section class="row recipes">

			{% for recipe in recipes %}
				<div class="col-md-4">
					<article>
						{#todo slug avec le nom de la recipe au lieu de l'ID#}
						<a href="{{ path('recipe_show', {'id': recipe.id}) }}">
							<img src="{{ asset('uploads/' ~ recipe.picture) }}" alt="{{ recipe.title }}" class="img-responsive">
						</a>
						<h2><a href="{{ path('recipe_show', {'id': recipe.id}) }}">{{ recipe.title }}</a></h2>
						<footer>
							<div class="label"><a href="#" class="like"><i class="fa fa-heart"></i></a> 12</div>
							<div class="label"><i class="fa fa-cutlery"></i> {{ recipe.category.label }}</div>
							<div class="label"><i class="fa fa-user"></i> François P.</div>
						</footer>
					</article>
				</div>
			{% endfor %}

		</section>

	</main>

{% endblock %}
